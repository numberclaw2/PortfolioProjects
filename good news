CREATE VIEW   NTL_PRD_QMVM.RMC_INSIDE_SALES_MARKET_SCORECARD_DASH_CHAT AS
(
SELECT 
 FACT.RPT_MTH
,FACT.REPORT_DT
,FACT.ACT_DT
,FACT.BRANCH
,FACT.BRANCH_ID
,FACT.BRANCH_NAME_ABRV
,FACT.EMP_ID
,FACT.EMP_NM
,FACT.USER_ID
,FACT.DIRECTOR_USER_ID
,FACT.DIRECT_MANAGER_USER_ID
,FACT.SUPERVISOR_USER_ID
,FACT.DIRECTOR_VENDOR_NM
,FACT.AD_LOC_NM
,FACT.SUPV_NM
,FACT.METRIC_NBR AS METRIC_NUM
,FACT.METRIC_NUM_VALUE
,FACT.METRIC_DEN_VALUE
,MET.METRIC_NM
,MET.METRIC_NUM_NM
,MET.METRIC_DEN_NM
,MET.METRIC_NM_FRIENDLY
,FACT.RLS_STRING
FROM NTL_PRD_QMTBLS.RMC_INSIDE_SALES_COMPLIO_SUMMARY_CHAT

JOIN NTL_PRD_QMTBLS.RMC_INSIDE_SALES_MARKET_SCORECARD_MAPPING MET
ON FACT.METRIC_NBR = MET.METRIC_NBR
AND DATE BETWEEN MET.EFF_DT AND MET.EXP_DT


);
CREATE VIEW Failed.  [3807] Object 'FACT' does not exist.

